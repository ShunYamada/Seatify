<% provide(:title, "Seatify") %>
<div class="home_header">
  <div class="container">
    <h1>Seatify</h1>
    <p>To solve no vacant tables, get a seat soon!
      Currently Seatify works in <span class="area_mark">Roppongi - Akasaka</span> area mainly.</p>
  </div>
</div>
<!-- /header -->

<div class="container">
  <% if user_signed_in? %>
    <%= link_to new_seat_path do %>
    <div class="btn give_seat">
      GIVE A SEAT
    </div>
    <% end %>

    <%= link_to current_user do %>
    <div class="btn show_profile">
      SHOW PROFILE
    </div>
    <% end %>
  <% else %>
    <%= link_to new_user_session_path do %>
      <div class="btn become_host">
        BECOME HOST
      </div>
    <% end %>
  <% end %>

  <div class="find_seat">
    <h1>How it works</h1>
    <div class="find_menu">
      <div class="find_item">
        <h2>1. Find a seat</h2>
        <p>All seats are available.</p>
      </div>
      <div class="find_item">
        <h2>2. Request a seat</h2>
        <p>Send SMS to host of a seat.</p>
      </div>
      <div class="find_item">
        <h2>2. Get a seat</h2>
        <p>Sharing a table socially.</p>
      </div>
    </div>
  </div>
  <!-- /find_seat -->

  <div class="get_seat">
    <h1>Let's get a seat!</h1>

    <div class="contents">
      <div class="contents">
        <%= render @seats %>
      </div>
    </div>
  </div>

</div>
