<% provide(:title, "Make a Seat") %>
<%= render 'layouts/header' %>
<div class="container">
  <div class="register service">
    <div class="service_text">
      <h2>Make a Seat</h2>
      <p><span class="required_mark">*</span> is required.</p>
    </div>

    <%= form_for(@seat) do |f| %>
      <%= f.fields_for :user do |i| %>
        <div class="form-group">
          <label>Your SMS <span class="required_mark">*</span></label>
          <%= i.text_field :sms, class: "form-control", autofocus: true, placeholder: "Enter SMS(Phone Number)" %>
        </div>
      <% end %>
      <div class="form-group">
        <label>Place Name <span class="required_mark">*</span></label>
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Enter place name" %>
      </div>
      <div class="form-group">
        <label>Place URL</label>
        <%= f.text_field :url, class: "form-control", autofocus: true, placeholder: "Enter tabelog or official URL" %>
      </div>
      <div class="form-group">
        <label>Place Address</label>
        <%= f.text_field :address, class: "form-control", autofocus: true, placeholder: "Enter place's address" %>
      </div>
      <div class="form-group">
        <label>Price</label>
        <%= f.text_field :price, class: "form-control", autofocus: true, placeholder: "Enter price, FREE is okay:)", vaule: "100yen" %>
      </div>
      <div class="form-group">
        <label>Seat image input</label>
        <%= f.file_field :image, class: "form-control-file" %>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <%= f.check_box :wifi, {:checked => false}, :on, :off %> Available WiFi
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <%= f.check_box :charge, {:checked => false}, :on, :off %> Available Charge
        </label>
      </div>
      <%= f.submit "POST A SEAT", class: "btn submit" %>
    <% end %>
  </div>
</div>
