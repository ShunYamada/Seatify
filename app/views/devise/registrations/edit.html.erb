<% provide(:title, "Login") %>
<%= render 'layouts/header' %>
<div class="container">
  <div class="register service">
    <div class="service_text">
      <h2>プロフィールを編集する</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <label>お名前</label>
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Enter full name" %>
      </div>
      <div class="form-group">
        <label>メールアドレス</label>
        <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Enter email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <label>SMS、電話番号</label>
        <%= f.text_field :sms, class: "form-control", autofocus: true, placeholder: "Enter SMS(Phone Number)" %>
      </div>
      <div class="form-group">
        <label>プロフィール画像</label>
        <%= f.file_field :image, class: "form-control-file" %>
      </div>
      <div class="form-group">
        <label>肩書き、キャッチフレーズ</label>
        <%= f.text_field :occupation, class: "form-control", autofocus: true, placeholder: "Enter occupation" %>
      </div>
      <div class="form-group">
        <label>簡単な自己紹介</label>
        <%= f.text_area :description, class: "form-control", autofocus: true, placeholder: "Enter description" %>
      </div>
      <div class="form-check">
        <label>レンタルできるもの</label><br />
        <label class="form-check-label">
          <%= f.check_box :iphone, {:checked => false}, :on, :off %> 貸出可能なiPhone充電器がある
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <%= f.check_box :android, {:checked => false}, :on, :off %> 貸出可能なAndroid充電器がある
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <%= f.check_box :macbook, {:checked => false}, :on, :off %> 利用可能なMacBookPro充電器がある
        </label>
      </div>
      <%= f.submit "更新する", class: "btn submit" %>
    <% end %>
  </div>
</div>
