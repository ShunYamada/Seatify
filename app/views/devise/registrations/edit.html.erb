<% provide(:title, "Login") %>
<%= render 'layouts/header' %>
<div class="container">
  <div class="register service">
    <div class="service_text">
      <h2>Edit Profile</h2>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Enter full name" %>
      </div>
      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control", autofocus: true, placeholder: "Enter email" %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
      <div class="form-group">
        <label>SMS(Phone Number)</label>
        <%= f.text_field :sms, class: "form-control", autofocus: true, placeholder: "Enter SMS(Phone Number)" %>
      </div>
      <div class="form-group">
        <label>Profile image input</label>
        <input type="file" class="form-control-file">
      </div>
      <div class="form-group">
        <%= f.label :occupation %><br />
        <%= f.text_field :occupation, class: "form-control", autofocus: true, placeholder: "Enter occupation" %>
      </div>
      <div class="form-group">
        <%= f.label :description %><br />
        <%= f.text_area :description, class: "form-control", autofocus: true, placeholder: "Enter description" %>
      </div>
      <%= f.submit "UPDATE PROFILE", class: "btn submit" %>
    <% end %>
  </div>
</div>
